{
  "name": "Alert Dashboard DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "forwardPorts": [8000, 8001],
  "postCreateCommand": "bash /usr/local/bin/install.sh",
  "remoteUser": "vscode",
  "appPort": ["8000:8000", "8001:8001"],
  "waitFor": "postCreateCommand",
  "postAttachCommand": {
    "server": "cd /workspace && uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload"
  }
}